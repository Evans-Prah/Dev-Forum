<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Pro Account </h1>
        <p>Sign up for the pro account for GH50/month and get exclusive access to the platform and contact information!</p>
      <div class="card card-body bg-light">
        <%- include('partials/messages') %>
        <form autocomplete="off" action="/register/pro" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control"
            value="<%= typeof name != 'undefined' ? name : '' %>" required/>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control"
            value="<%= typeof name != 'undefined' ? name : '' %>" required/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control"
            value="<%= typeof name != 'undefined' ? name : '' %>" required/>
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control"
            value="<%= typeof name != 'undefined' ? name : '' %>" required/>
          </div>

          <button type="submit" class="btn btn-primary btn-block"> Register</button>
            
        </form>
        <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
      </div>
    </div>
  </div>
</div>